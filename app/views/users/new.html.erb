<h1>Sign up</h1>

<p>
<%= form_for @user, html: {method: :post} do |f| %>

	<% if @user.errors.full_messages.any? %>
		<ul>
			<% @user.errors.full_messages.each do |error_message| %>
			<li><%= error_message %></li><br>
			<% end %>
		</ul>
	<% end %>

	<div class="field">
		<%= f.label :fname, "First Name" %>
		<%= f.text_field :fname %>
	</div>

	<div class="field">
		<%= f.label :lname, "Last Name" %>
		<%= f.text_field :lname %>
	</div>

	<div class="field">
		<%= f.label :email, "Email" %>
		<%= f.text_field :email %>
	</div>

	<div class="field">
		<% f.label :password, "Password" %>
		<%= f.text_field :password %>
	</div>

	<div class ="actions">
		<%= f.submit :create %>
	</div>

<% end %>
</p>